function pause(time: number) {
    var deferred = require('q').defer();

    // if the supplied time value is not a number, 
    // set it to 0, 
    // else use supplied value
    time = isNaN(time) ? 0 : time;

    // Logging that this function has been called, 
    // just in case you forgot about a pause() you added somewhere, 
    // and you think your code is just running super-slow :)
    L.info('pause()-ing for ' + time + ' milliseconds');

    setTimeout(function () {
        deferred.resolve();
    }, time);

    return deferred.promise;
    
    //USAGE
    // pause(10000).then(() =>  {
    //   res.send([
    //     { name: "Administrator", domain: 'vsphere.local', password: 'ZAQ!xsw2' },
    //     { name: "Administrator1", domain: 'vsphere.local', password: 'ZAQ!xsw2' },
    //     { name: "Administrator2", domain: 'vsphere.local', password: 'ZAQ!xsw2' }
    //   ]);
    //   L.info('response sent');
    // });
}









